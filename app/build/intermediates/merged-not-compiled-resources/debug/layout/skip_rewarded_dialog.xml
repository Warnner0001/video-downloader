<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/close_rewarded_dialog_background">

    <TextView
            android:id="@+id/skip_dialog_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip_rewarded_dialog_title"
            android:textSize="22sp"
            android:layout_gravity="start"
            android:textColor="@color/close_rewarded_title_color"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"/>

    <TextView
            android:id="@+id/skip_dialog_sub_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip_rewarded_dialog_sub_title"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/close_rewarded_sub_title_color"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip_rewarded_dialog_close_button"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/close_rewarded_button_color"
                android:id="@+id/close_button"
                android:background="@color/close_rewarded_button_background_color"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip_rewarded_dialog_keep_watching"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/close_rewarded_button_color"
                android:id="@+id/keep_watching_button"
                android:background="@color/close_rewarded_button_background_color"
                android:maxLines="1"
                android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>