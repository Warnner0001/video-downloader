<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ia_sel_mute_w"
            android:background="@drawable/ia_circle_overlay_bg"
            android:id="@+id/ia_iv_mute_button_new"
            android:padding="4dp"
            android:layout_margin="12dp"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible"
            android:layout_marginTop="22dp"
            />

    <!-- dp is used so it will look the same across font scales -->

    <com.fyber.inneractive.sdk.ui.IAsmoothProgressBar
            android:id="@+id/ia_video_progressbar_new"
            style="@style/ia_video_progressbar_style_new"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layoutDirection="ltr"
            tools:ignore="RtlHardcoded"
            android:layout_margin="4dp"
            tools:targetApi="jelly_bean_mr1"
            android:visibility="invisible"
    />

    <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="12dp"
            android:background="@drawable/ia_circle_overlay_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:gravity="center"
            tools:text="22"
            android:textSize="15dp"
            android:textColor="#fff"
            android:id="@+id/ia_tv_skip_left"
    />

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="12dp"
            android:src="@drawable/outline_skip_next_white_18dp"
            android:background="@drawable/ia_circle_overlay_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:id="@+id/ia_iv_skip"
            />


    <FrameLayout
            android:layout_width="@dimen/ia_video_overlay_cta_button_width"
            android:layout_height="@dimen/ia_video_overlay_cta_button_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ia_round_overlay_bg_fyber"
            android:paddingLeft="@dimen/ia_video_overlay_cta_button_padding"
            android:paddingRight="@dimen/ia_video_overlay_cta_button_padding"
            android:id="@+id/ia_cta_container"
            android:layout_margin="12dp"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CTA_TEXT"
                android:textSize="16dp"
                android:id="@+id/ia_tv_call_to_action"
                android:textColor="#fff"
                android:gravity="center"
                android:lines="1"
        />


    </FrameLayout>


</RelativeLayout>
